{% extends 'home.html.twig' %}

{% block content %}
    <h1 class="page-header">
        Login
    </h1>
    <form id="login-form" action="{{ path('login_check') }}" method="post" role="form" style="display: block;">
        <div class="form-group">
            <input type="text" required name="_username" id="username" tabindex="1" class="form-control" placeholder="Username" value="">
        </div>
        <div class="form-group">
            <input type="password" required name="_password" id="password" tabindex="2" class="form-control" placeholder="Password">
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-success" value="Log In">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center">
                        <a href="https://phpoll.com/recover" tabindex="5" class="forgot-password">Forgot Password?</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}

