{% extends 'user/menu.html.twig' %}

{% block content %}
    {#<div class="container">#}
        {#<div class="row">#}
            {#<div class="col-md-6 col-md-offset-3">#}
                {#<div class="panel panel-custom-horrible-red">#}
                    {#<div class="panel-body">#}
                        {#<div align="center">#}
                            <h2 class="page-header">Profile</h2>
                            {% form_theme form 'bootstrap_3_layout.html.twig' %}
                            {% if user.avatar %}
                                <div>
                                    <img src="{{ asset('uploads/avatars/' ~ user.avatar) }}">
                                </div>
                            {%  endif %}

                            <div style="width: 300px;">
                                {{ form_start(form) }}
                                <div>
                                    {{ form_label(form.avatar) }}
                                    {{ form_errors(form.avatar) }}
                                    {{ form_widget(form.avatar) }}
                                </div>
                                <div>
                                    {{ form_label(form.name) }}
                                    {{ form_errors(form.name) }}
                                    {{ form_widget(form.name) }}
                                </div>
                                <br>
                                <div>
                                    {{ form_label(form.lastName) }}
                                    {{ form_errors(form.lastName) }}
                                    {{ form_widget(form.lastName) }}
                                </div>
                                <br>
                                <div>
                                    {{ form_label(form.email) }}
                                    {{ form_errors(form.email) }}
                                    {{ form_widget(form.email) }}
                                </div>
                                <br>
                                <div>
                                    {{ form_label(form.username) }}
                                    {{ form_errors(form.username) }}
                                    {{ form_widget(form.username) }}
                                </div>
                                <br>
                                <div>
                                    {#{{ form_label(form.password) }}#}
                                    {{ form_errors(form.password) }}
                                    {{ form_widget(form.password) }}
                                </div>
                                <div>
                                    {{ form_label(form.birthDate) }}
                                    {{ form_errors(form.birthDate) }}
                                    {{ form_widget(form.birthDate) }}
                                </div>
                                <br>
                                <div>
                                    {{ form_label(form.brochure) }}
                                    {% if user.brochure %}
                                        <a href="{{ asset('uploads/brochures/' ~ user.brochure) }}" target="_blank" >View brochure (PDF)</a>
                                    {% endif %}
                                    {{ form_errors(form.brochure) }}
                                    {{ form_widget(form.brochure) }}
                                </div>
                                <br>
                                {{ form_end(form) }}
                            </div>
                        {#</div>#}
                    {#</div>#}
                {#</div>#}
            {#</div>#}
        {#</div>#}
    {#</div>#}
{% endblock %}